<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		">

	<!--设置bean （目标类）-->
	<bean id="personDao" class="com.elechen.aop.PersonImpl">
	<!--设置bean （切面） -->
	</bean>
	<bean id="transaction" class="com.elechen.aop.Transaction">
	</bean>
	<!-- aop 配置-->
	<aop:config>
		<!-- 切入点 experssion 确定目标类  -->
		<aop:pointcut
				expression="execution(* com..PersonImpl.*(..))"
				id="perfrom"/>
		<!--  ref===切面 -->
		<aop:aspect ref="transaction">
			<!--前置通知-->
			<aop:before method="beginTransaction" pointcut-ref="perfrom"/>
			<!--后置通知-->
			<aop:after-returning method="commit" pointcut-ref="perfrom"/>
		</aop:aspect>
	</aop:config>
</beans>
    
    
    